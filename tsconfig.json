{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir":"./lib/",
    "strict": true,
    "noUncheckedIndexedAccess": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/tests/**/*"
  ]
}